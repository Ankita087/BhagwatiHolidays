<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:elevation="8dp"
        android:background="@drawable/cicular_corner"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_offersImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/sample_offer_image" />

        <TextView
            android:id="@+id/tv_offerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="53dp"
            android:textSize="21sp"
            android:layout_marginTop="6dp"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Rutvik mehta was supposed to give discount LOL der" />

        <TextView
            android:id="@+id/tv_offerSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="65dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:textColor="#AAA"
            android:textSize="16sp"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="a quick brown quick brown fox jumped over a lazzy dog  fox jumped over a lazzy dog and LOL they laughed!!!! "

        android:background="@drawable/logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Rutvik mehta" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#CCC"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="skndklcnlksdnclksnldkcn" />

    </LinearLayout>

</LinearLayout>